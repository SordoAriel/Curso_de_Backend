<h1>Productos:</h1>
<p hidden id="firstName">{{firstName}}</p>
<h2>Cliente: {{firstName}}!</h2>

<table class="tableStyle">
    <tr class="tableRowStyle">
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Código</th>
        <th>Imagen</th>
        <th>Precio</th>
    </tr>
        {{#each products.payload}}
    <tr>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{code}}</td>
            <td>{{thumbnail}}</td>
            <td>{{price}}</td>
            <td><form method="POST" action="/api/carts/6537ba2f730bccd42fb97fd9/product/{{id}}">
                    <button type="submit">Añadir al carrito</button>
                </form>
            </td>
    </tr>
        {{/each}}
</table>

<p>Resultados: {{products.payload.length}}</p>
<a href="{{products.prevLink}}">Página {{products.prevPage}}  </a>
<p>Página {{products.page}}</p>
<br>
<a href="{{products.nextLink}}">Página {{products.nextPage}}  </a>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/products.js"></script>
