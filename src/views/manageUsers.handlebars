    <table>
        {{#each users}}
        <tr>
            <td>{{Nombre}}</td>
            <td>{{Apellido}}</td>
            <td >{{Email}}</td>
            <td>{{Rol}}</td>
            <td>{{Ultima_Conexion}}</td>
            <td><form action="http://localhost:8080/api/users/premium/{{Email}}" method="post">
